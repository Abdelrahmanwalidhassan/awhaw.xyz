{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "resolveJsonModule": true,
    "lib": ["ES6"],
    "rootDir": "./src",
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": false,
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
